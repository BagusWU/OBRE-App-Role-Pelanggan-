<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    tools:context=".ui.activity.OnBoardingActivity">


    <Button
        android:id="@+id/btn_goregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Belum punya akun"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btn_gologin"
        app:layout_constraintStart_toStartOf="@+id/btn_gologin"
        app:layout_constraintTop_toBottomOf="@+id/btn_gologin" />

    <TextView
        android:id="@+id/btn_gologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_gologin"
        app:layout_constraintEnd_toEndOf="@+id/btn_gologin"
        app:layout_constraintStart_toStartOf="@+id/btn_gologin"
        app:srcCompat="@drawable/obre_logo_small" />
</androidx.constraintlayout.widget.ConstraintLayout>